<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_prijatelji"
    tools:context="com.rvir.filmi.filmi.uporabnik.PrijateljiActivity">

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:text="Dodaj prijatelja" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textDodaj"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="20dp"
        android:textColor="#e58c38"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textDodaj"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:id="@+id/editKoda"
        android:width="150dp"
        android:elegantTextHeight="true" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textDodaj"
        android:layout_toEndOf="@+id/editKoda"
        android:text="+"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:paddingBottom="5dp"
        android:id="@+id/dodajButton"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/white"/>

    <TextView
        android:text="Prijatelji"
        android:textColor="#e58c38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textPrijatelji"
        android:layout_below="@+id/dodajButton"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingTop="30dp"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/listPrijatelji"
        android:layout_below="@+id/textPrijatelji"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:divider="@color/list_divider"
        android:dividerHeight="1dp" />

</RelativeLayout>
</ScrollView>