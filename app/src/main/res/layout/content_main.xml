<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/app_bar_main"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <Button
            android:id="@+id/buttonFilmi"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#303F9F"
            android:layout_margin="10dp"
            android:drawableTop="@drawable/filmi_home_movies"
            android:paddingTop="20dip"
            android:text="Filmi"
            android:textColor="#fef8f8" />

        <Button
            android:id="@+id/home_search"
            android:layout_width="0dip"
            android:paddingTop="20dip"
            android:drawableTop="@drawable/filmi_home_search"
            android:text="Iskanje"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#e58c38"
            android:layout_margin="10dp"
            android:textColor="#fef8f8"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <Button
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="20dip"
            android:drawableTop="@drawable/filmi_home_movies2"
            android:text="Predlagaj film"
            android:background="#e58c38"
            android:layout_margin="10dp"
            android:textColor="#fef8f8"/>

        <Button
            android:id="@+id/buttonSeznami"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:paddingTop="20dip"
            android:drawableTop="@drawable/filmi_home_heart"
            android:layout_weight="1"
            android:background="#303F9F"
            android:layout_margin="10dp"
            android:text="Moji seznami filmov"
            android:textColor="#fef8f8" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <Button
            android:id="@+id/buttonPrijatelji"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="20dip"
            android:drawableTop="@drawable/filmi_home_friends"
            android:background="#303F9F"
            android:layout_margin="10dp"
            android:text="Prijatelji"
            android:textColor="#fef8f8"
            android:visibility="gone"/>

        <Button
            android:id="@+id/buttonPrijava"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="20dip"
            android:drawableTop="@drawable/filmi_home_profile"
            android:background="#e58c38"
            android:layout_margin="10dp"
            android:text="Prijava"
            android:textColor="#fef8f8"/>

        <Button
            android:id="@+id/buttonProfil"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="20dip"
            android:drawableTop="@drawable/filmi_home_profile"
            android:background="#e58c38"
            android:layout_margin="10dp"
            android:text="Profil"
            android:visibility="visible"
            android:textColor="#fef8f8"/>
    </LinearLayout>
</LinearLayout>