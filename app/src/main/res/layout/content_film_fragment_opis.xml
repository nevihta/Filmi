<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/relative">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rela2">
                    <ImageView
                        android:id="@+id/poster"
                        android:layout_width="120dp"
                        android:layout_height="190dp"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:src="@drawable/filmi_heart"
                        android:paddingBottom="10dp"
                        />

                    <ImageView
                        android:id="@+id/watched"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="17dp"
                        android:src="@drawable/filmi_checkmark"
                        android:layout_alignParentTop="true"
                        android:layout_alignEnd="@+id/poster" />
            </RelativeLayout>

        <ImageView
            android:id="@+id/fave"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/filmi_heart"
            android:paddingBottom="10dp"
            android:layout_below="@+id/rela2" />

        <ImageView
            android:id="@+id/notWatched"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:paddingTop="10dp"
            android:src="@drawable/filmi_checkmark_empty"
            android:paddingBottom="10dp"
            android:layout_below="@+id/rela2"
            android:layout_toEndOf="@+id/fave" />

        <ImageView
            android:id="@+id/wish"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:paddingTop="10dp"
            android:src="@drawable/filmi_star_empty"
            android:paddingBottom="10dp"
            android:layout_below="@+id/rela2"
            android:layout_toEndOf="@+id/notWatched" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:paddingTop="10dp"
            android:src="@drawable/filmi_share"
            android:paddingBottom="10dp"
            android:layout_below="@+id/rela2"
            android:layout_toEndOf="@+id/wish" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/rela2"
            android:orientation="vertical"
            android:id="@+id/linearLayout2">
            <TextView
                android:id="@+id/title"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Title"
                android:textColor="#235cd6" />

            <TextView
                android:id="@+id/categories"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="Kategorije"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/yearLabel"
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="Leto: "
                    android:textColor="#235cd6" />

                    <TextView
                        android:id="@+id/year"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:layout_toEndOf="@+id/yearLabel"
                        android:text="Leto" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/ocenaLabel"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="Ocena: "
                android:textColor="#235cd6" />

            <TextView
                android:id="@+id/ocena"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ocenaLabel"
                android:textSize="13dp"
                android:text="ocena: " />

        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/rezijaLabel"
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="ReÅ¾ija: "
                    android:textColor="#235cd6" />

                <TextView
                    android:id="@+id/rezija"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/rezijaLabel"
                    android:textSize="13dp"
                    android:text="rezija " />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/igralciLabel"
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="Igralci: "
                    android:textColor="#235cd6" />

                <TextView
                    android:id="@+id/igralci"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/igralciLabel"
                    android:textSize="13dp"
                    android:text="igralci " />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

        <TextView
            android:id="@+id/labelopis"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opis"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:textColor="#e58c38" />

        <TextView
            android:id="@+id/opis"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/labelopis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opis" />


        <TextView
            android:id="@+id/video"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/opis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video"
            android:visibility="invisible"
            android:textColor="#e58c38"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <ImageView
        android:id="@+id/youtube"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:paddingTop="10dp"
        android:src="@drawable/filmi_youtube"
        android:paddingBottom="10dp"
        android:layout_below="@+id/video"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:clickable="true"/>



</RelativeLayout>